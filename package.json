{
  "name": "scoop-manager",
  "version": "1.0.0",
  "description": "Scoop 包管理器可视化工具",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder --win --x64",
    "build:dir": "electron-builder --win --x64 --dir",
    "build:portable": "powershell -ExecutionPolicy Bypass -File build-portable.ps1",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "scoop",
    "package-manager",
    "electron"
  ],
  "author": "",
  "license": "MIT",
  "build": {
    "appId": "com.scoopmanager.app",
    "productName": "Scoop Manager",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules/**/*",
      "node_modules/better-sqlite3/**/*",
      "node_modules/bindings/**/*",
      "node_modules/file-uri-to-path/**/*"
    ],
    "asarUnpack": [
      "node_modules/better-sqlite3/**/*",
      "node_modules/bindings/**/*",
      "node_modules/file-uri-to-path/**/*"
    ],
    "win": {
      "target": "dir",
      "signAndEditExecutable": false
    }
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^26.0.12",
    "electron-rebuild": "^3.2.9"
  },
  "dependencies": {
    "better-sqlite3": "^9.2.2",
    "node-fetch": "^2.7.0"
  }
}
